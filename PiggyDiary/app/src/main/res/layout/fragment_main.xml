<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/fragment_main"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <Button
        android:id="@+id/payment_btn"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:background="@drawable/btn_shape"
        android:text="@string/btn_pay"
        android:onClick="onClickMain"/>
    <Button
        android:id="@+id/income_btn"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@drawable/btn_shape"
        android:text="@string/btn_income"
        android:onClick="onClickMain" />
    <Button
        android:id="@+id/report_btn"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/payment_btn"
        android:layout_margin="20dp"
        android:background="@drawable/btn_shape"
        android:text="@string/btn_report"
        android:onClick="onClickMain" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/daily_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/pig_today"
            android:onClick="onClickMain" />
        <Button
            android:id="@+id/weekly_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/pig_week"
            android:onClick="onClickMain" />
        <Button
            android:id="@+id/monthly_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/pig_month"
            android:onClick="onClickMain" />
        <Button
            android:id="@+id/all_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/pig_all"
            android:onClick="onClickMain" />
    </LinearLayout>

</RelativeLayout>
